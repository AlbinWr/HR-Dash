@using HR_Dash.Models.ViewModels
@model LoginViewModel;
@{
    ViewData["Title"] = "Logga In";
    Layout = "~/Views/Shared/_KontoLayout.cshtml";
}

<div class="konto-container">
    <div class="konto-box">
        <h2 class="text-center mb-4">Logga in</h2>
        <form asp-action="LoggaIn" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Losenord" class="form-label">Lösenord</label>
                <input asp-for="Losenord" class="form-control" />
                <span asp-validation-for="Losenord" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <label class="form-check-label">
                    <input asp-for="KomIhag" class="form-check-input" />
                    @Html.DisplayNameFor(model => model.KomIhag)
                </label>
            </div>
            <input type="submit" value="Logga in" class="btn btn-success w-100 p-2" />
            <div class="mt-3 text-center">
                <a asp-action="Index" asp-controller="Home" class="text-decoration-none mt-3">Tillbaka</a>
            </div>
                
        </form>
    </div>
</div>

@section Scripts {}
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
